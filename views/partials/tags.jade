form.form-horizontal(method='post', action='/defect')
  h3.page-header defects
  .control-group
    label.control-label(for="tagName") Tag Name
    .controls
      input#tagName(type="text", placeholder="Tag Name", data-field-name='Name', value="a_tag")
  .control-group
    label.control-label(for="tagCount") Count
    .controls
      input#tagCount(type="number", value="1", min="1", data-field-name="count")
  .control-group
    .controls
      label.checkbox Samuel L. Jacksonize!
        input.jacksonize(type="checkbox")
      button#tagSubmit.btn Create
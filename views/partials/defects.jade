form.form-horizontal(method='post', action='/defect')
  h3.page-header defects
  .control-group
    label.control-label(for="defectName") Defect Name
    .controls
      input#defectName(type="text", placeholder="Defect Name", data-field-name='Name', value="a defect")
  .control-group
    label.control-label(for="defectPrority") Defect Priority
    .controls
      select#defectPriority(data-field-name='Priority')
  .control-group
    label.control-label(for="defectSeverity") Defect Severity
    .controls
      select#defectSeverity(data-field-name='Severity')
  .control-group
    label.control-label(for="defectEnvironments") Defect Environments
    .controls
      select#defectEnvironments(data-field-name='Environment')
  .control-group
    label.control-label(for="defectRelease") Release
    .controls
      select#defectRelease(data-field-name='Release')
  .control-group
    label.control-label(for="defectIteration") Iteration
    .controls
      select#defectIteration(data-field-name='Iteration')
  .control-group
    label.control-label(for="defectAmount") Amount of Defects
    .controls
      input#defectAmount(type="number", value="1", data-field-name="count")
  .control-group
    .controls
      button#defectSubmit.btn Create
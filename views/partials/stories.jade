form.form-horizontal(method='post', action='/story')
  h3.page-header stories
  .control-group
    label.control-label(for="storyName") User Story Name
    .controls
      input#storyName(type="text", placeholder="Story Name", data-field-name='Name', value="a story")
  .control-group
    label.control-label(for="storyState") Story State
    .controls
      select#storyState(data-field-name='ScheduleState')
  .control-group
    label.control-label(for="storyRelease") Release
    .controls
      select#storyRelease(data-field-name='Release')
  .control-group
    label.control-label(for="storyIteration") Iteration
    .controls
      select#storyIteration(data-field-name='Iteration')
  .control-group
    label.control-label(for="storyAmount") Amount of stories
    .controls
      input#storyAmount(type="number", min="1", value="1", data-field-name='count')
  .control-group
    .controls
      label.checkbox Samuel L. Jacksonize!
        input.jacksonize(type="checkbox")
      button#storySubmit.btn Create